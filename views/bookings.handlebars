<div class="field">
    <input class="button is-info" type="submit" value="Search">
</div>
{{#each tables}}
<div class="field">
    <label class="label" for="">Bookings for, <a href="/bookings/{{this.username}}">{{this.username}}</a></label>
    <input class="input is-normal is-2" type="text" placeholder="enter username">
</div>

<table class="table is-fullwidth">
    <tr>
        <th>{{this.table_name}}</th>
        <th>{{this.capacity}}</th>
        <th> {{this.number_of_people}}</th>
        <th>{{this.username}}</th>
        <th>{{this.contact_number}}</th>
        <th>
        <td>
            <form action="/cancel" method="post">

                <button class="button is-warning" name="toCancel" value="{{this.table_name}}">Cancel booking</button>
            </form>
        </td>
        </th>
    </tr>

</table>

{{/each}}